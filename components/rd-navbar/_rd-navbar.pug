include _navigation

mixin rd-navbar
	//RD Navbar
	header.rd-navbar-wrap( data-preset!={ title:'Navbar Default', category:'header', reload:true, id:'navbar-default' } )
		nav.rd-navbar&attributes( attributes )
			.navbar-container
				.navbar-cell
					.navbar-panel
						button.navbar-switch.mdi-menu.novi-icon( data-multi-switch!= {
							targets: '.rd-navbar',
							scope:   '.rd-navbar',
							isolate: '[data-multi-switch]'
						})

						.navbar-logo
							a.navbar-logo-link( href= homePage.link )
								+img( logo.default ).navbar-logo-default( alt= logo.name )
								+img( logo.inverse ).navbar-logo-inverse( alt= logo.name )

				.navbar-cell.navbar-spacer

				.navbar-cell.navbar-sidebar
					+navigation( menu )
					
				.navbar-cell
					button.navbar-switch.navbar-switch-soc.mdi-share-variant.novi-icon( data-multi-switch!= {
						targets: '.navbar-soc',
						scope: '.navbar-soc',
						isolate: '[data-multi-switch]'
					})
					.navbar-soc
						ul.list.social-icon-list.list-inline.list-inline-lg
							li.list-inline-item: a.fa-rss( href='#' )
							li.list-inline-item: a.fa-twitter( href='#' )
							li.list-inline-item: a.fa-facebook-f( href='#' )
							li.list-inline-item: a.fa-linkedin-square( href='#' )
