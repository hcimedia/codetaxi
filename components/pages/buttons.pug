extends ../base/_skeleton

include ../rd-navbar/_rd-navbar

block variables
	- pageName = 'Buttons';

block page
	+rd-navbar
	
	section.section.section-xxl.bg-gray-100.text-center.parallax-js.parallax-js-box-1
		.parallax-js-element-9: .layer( data-depth='.1' )
			img(src="images/pjs-element-13.svg", alt="")
		.parallax-js-element-10: .layer( data-depth='-.1' )
			img(src="images/pjs-element-14.svg", alt="")
		.parallax-js-element-11: .layer( data-depth='.1' )
			img(src="images/pjs-element-13.svg", alt="")
		.parallax-js-element-12: .layer( data-depth='-.1' )
			img(src="images/pjs-element-14.svg", alt="")
		.parallax-js-element-13: .layer( data-depth='.1' )
			img(src="images/pjs-element-11.svg", alt="")
		.container
			.row.justify-content-center
				.col-md-8.col-lg-6
					h1 Buttons
	
	section.section.section-xl.bg-white.bg-transparent
		.container.text-center
			h2 Button styles
			p Use any of the available button classes to quickly create a styled button.
			.mt-5
				.d-inline-flex.justify-content-center.align-items-center.flex-wrap.group-20
					button.btn.btn-primary Primary
					button.btn.btn-dark Dark
	
	section.section.section-xl.bg-white.bg-transparent
		.container.text-center
			h2 Button sizes
			p Want a larger or smaller ones? Add #[code .btn-lg] or #[code .btn-sm] classes for additional sizes.
			.mt-5
				.d-inline-flex.justify-content-center.align-items-center.flex-wrap.group-20
					button.btn.btn-lg.btn-primary Large
					button.btn.btn-primary Default
					button.btn.btn-sm.btn-primary Small
					
	section.section.section-xl.bg-white.bg-transparent
		.container.text-center
			h2 Button shapes
			p Want a different shape? Add #[code .btn-rect] or #[code .btn-round] classes to your buttons.
			.mt-5
				.d-inline-flex.justify-content-center.align-items-center.flex-wrap.group-20
					button.btn.btn-rect.btn-primary Rect
					button.btn.btn-primary Default
					button.btn.btn-round.btn-primary Round
					
	section.section.section-xl.bg-white.bg-transparent
		.container.text-center
			h2 Button blocks
			p Create buttons that fit the entire parent width by adding #[code .btn-block] class to them.
			.row.justify-content-center.row-15
				.col-12.col-sm-8.col-md-6.col-lg-4
						button.btn.btn-block.btn-primary Button
						.mt-3
						button.btn.btn-block.btn-dark Button

	hr
	
	include ../footer/_footer-classic
