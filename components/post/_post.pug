//- Post minimal
	@param {object} obj - data object
	@param {string} obj.img - img
	@param {string} obj.title - title
	@param {string} obj.category - category
mixin post-minimal( obj )
	.post.post-minimal
		.post-minimal-figure
			a(href='#')
				+img( obj.img )
		.post-minimal-caption
			p.post-minimal-category= obj.category
			h6.post-minimal-title: a(href='#')= obj.title

//- Post Video
	@param {object} obj - data object
	@param {string} obj.img - img
	@param {string} obj.title - title
	@param {string} obj.category - category
mixin post-video( obj )
	.post.post-video
		.post-video-figure( data-lightgallery )
			a.btn.btn-video.lightgallery-item(href= obj.videoLink)
				svg(width='16', height='19', viewBox='0 0 16 19',  xmlns='http://www.w3.org/2000/svg')
					path(d='M15.5 9.5L0.499999 18.1603L0.5 0.839745L15.5 9.5Z')
			+img( obj.img )
		.post-video-caption
			p.post-video-category= obj.category
			h5.post-video-title: a(href='#')= obj.title

